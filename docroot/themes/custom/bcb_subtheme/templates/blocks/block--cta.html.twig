{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'col-sm-12',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  <div class='col-md-6 offset-md-3'>
  {% block content %}
    <h3>{{ content.field_cta_heading[0] }}</h3>
    <p>{{ content.body }}</p>
    <a class="btn btn-light" href="{{ content.field_cta_link.0['#url'] }}" role="button">{{ content.field_cta_link.0['#title'] }}</a>
  {% endblock %}
  </div>
</div>


